@page "/addresses/index/{PersonId:int}"
@inherits AddressBasePageClass

<PageTitle>Addresses</PageTitle>

<a href="/address/create/@PersonId" class="btn btn-primary">Create Address</a>
&nbsp;
<a href="/person/view/@PersonId" class="btn btn-primary">View Person</a>

<br />
<br />

@if (Addresses is null || !Addresses.Any())
{
    <LoadingOrNotFoundComponent ValueToShow="@AddressPlural" />
    return;
}

<AddressGridviewComponent Addresses="@Addresses" ShowAllColumns="true" />